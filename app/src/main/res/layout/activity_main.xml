<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.hackerfrog.tiles.MainActivity"
    android:background="#111111"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textColor="#f5f5f5"
                android:textAlignment="center"
                android:textSize="40dp"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Levels" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:onClick="showLevel"
                    android:background="#f5f5f5"
                    android:layout_margin="4dp"
                    android:textSize="32dp"
                    android:layout_height="114dp"
                    android:id="@+id/btn1lvl"
                    android:layout_width="0dp"
                    android:text="1"
                    android:layout_weight="1" />

                <Button
                    android:onClick="showLevel"
                    android:background="#f5f5f5"
                    android:layout_margin="4dp"
                    android:textSize="32dp"
                    android:layout_height="114dp"
                    android:id="@+id/btn2lvl"
                    android:layout_width="0dp"
                    android:text="2"
                    android:layout_weight="1" />

                <Button
                    android:onClick="showLevel"
                    android:background="#f5f5f5"
                    android:layout_margin="4dp"
                    android:textSize="32dp"
                    android:layout_height="114dp"
                    android:id="@+id/btn3lvl"
                    android:layout_width="0dp"
                    android:text="3"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

                <Button
                    android:onClick="showLevel"
                    android:background="#f5f5f5"
                    android:layout_margin="4dp"
                    android:textSize="32dp"
                    android:layout_height="114dp"
                    android:id="@+id/btn4lvl"
                    android:layout_width="0dp"
                    android:text="4"
                    android:layout_weight="1" />

                <Button
                    android:onClick="showLevel"
                    android:background="#f5f5f5"
                    android:layout_margin="4dp"
                    android:textSize="32dp"
                    android:layout_height="114dp"
                    android:id="@+id/btn5lvl"
                    android:layout_width="0dp"
                    android:text="5"
                    android:layout_weight="1" />

                <Button
                    android:onClick="showLevel"
                    android:background="#f5f5f5"
                    android:layout_margin="4dp"
                    android:textSize="32dp"
                    android:layout_height="114dp"
                    android:id="@+id/btn6lvl"
                    android:layout_width="0dp"
                    android:text="6"
                    android:layout_weight="1" />

        </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
